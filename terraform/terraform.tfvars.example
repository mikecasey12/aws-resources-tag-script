# Copy this file to terraform.tfvars and fill in your actual values.
# terraform.tfvars is gitignored to prevent committing sensitive information.

# ARN of your existing ECS cluster (Fargate-compatible)
cluster_arn = "arn:aws:ecs:REGION:ACCOUNT_ID:cluster/CLUSTER_NAME"

# AWS region where resources will be created
aws_region = "us-east-1"

# Full URI of your Docker image in ECR
# Format: ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/REPO_NAME:TAG
container_image = "123456789012.dkr.ecr.us-east-1.amazonaws.com/tag-script:latest"

###############################################################################
# Network Configuration
###############################################################################

# VPC to deploy into.  Omit if you have a default VPC.
# vpc_id = "vpc-xxxxxxxxxxxxxxxxx"

# ---------------------------------------------------------------------------
# Subnets
# ---------------------------------------------------------------------------
# Option A — provide existing subnet IDs (used as-is, no lookup performed):
# private_subnets = [
#   "subnet-xxxxxxxxxxxxxxxxx",
#   "subnet-xxxxxxxxxxxxxxxxx",
# ]
#
# Option B — leave unset (or set to []):
#   Terraform will first look for subnets it previously created (matched by
#   the ManagedBy=terraform tag).  If none are found it will create new ones.
#
# Number of subnets to create when none are found (default: 2):
# subnet_count = 2

# ---------------------------------------------------------------------------
# ECS Security Group
# ---------------------------------------------------------------------------
# Option A — provide an existing security group ID (used as-is):
# ecs_sg_id = "sg-xxxxxxxxxxxxxxxxx"
#
# Option B — leave unset (or set to ""):
#   Terraform will first look for a security group it previously created
#   (matched by tag).  If none is found it will create a new one.
